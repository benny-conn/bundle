{{define "ftp"}}

<!DOCTYPE html>
<html>
  {{template "head" .}}
  <style>
    body {
      display: flex;
      align-items: center;
      padding-top: 40px;
      padding-bottom: 40px;
      background-color: #f5f5f5;
      justify-content: center;
    }
  </style>

  <body class="text-center">
    <main class="form-signin cool-card mt-5">
      <form action="/ftp" method="POST">
        <img
          class="mb-4"
          src="/public/img/bundle.png"
          alt=""
          width="72"
          height="57"
        />
        <h1 class="h3 mb-3 fw-normal">Login</h1>

        <div class="form-floating" style="margin-bottom: 10px">
          <input
            type="password"
            class="form-control"
            id="password"
            name="ftp-password"
            placeholder="FTP Password"
            minlength="5"
            required
            maxlength="100"
          />
          <label for="floatingPassword">FTP Password</label>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">
          Log In
        </button>
        <input type="hidden" id="referer" name="referer" value="{{.}}" />
      </form>
    </main>
  </body>
  {{template "footer" .}}
</html>
{{ end }}
